<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:bw="clr-namespace:Basic.Windows" xmlns:bl="clr-namespace:Basic.Localizations"                    
    xmlns:enums="clr-namespace:Basic.Enums"
    xmlns:data="clr-namespace:System.Data;assembly=System.Data">
    <Style x:Key="keyDataGridColumnHeader" TargetType="{x:Type DataGridColumnHeader}">
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="MinHeight" Value="30"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    <Style x:Key="keyDataGridRowHeader" TargetType="{x:Type DataGridRowHeader}">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="0,-1,0,0"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>
    <Style x:Key="keyDataGridCell" TargetType="{x:Type DataGridCell}">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontFamily" Value="微软雅黑"></Setter>
        <Style.Triggers >
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#7F0078D7"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="keyDataGrid" TargetType="{x:Type DataGrid}">
        <Setter Property="CanUserAddRows" Value="True"/>
        <Setter Property="CanUserDeleteRows" Value="True"/>
        <Setter Property="CanUserResizeRows" Value="False"/>
        <Setter Property="SelectionUnit" Value="CellOrRowHeader"/>
        <Setter Property="SelectionMode" Value="Extended"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="RowHeaderWidth" Value="45"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="VerticalGridLinesBrush" Value="#FF688CAF"/>
        <Setter Property="HorizontalGridLinesBrush" Value="#FF688CAF"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="#FF688CAF"/>
        <Setter Property="RowDetailsVisibilityMode" Value="VisibleWhenSelected"/>
    </Style>

    <Style TargetType="{x:Type bl:ResourceEditor}"  BasedOn="{StaticResource {x:Type DataGrid}}">
        <Setter Property="Padding" Value="15"/>
        <Setter Property="CanUserAddRows" Value="True"/>
        <Setter Property="CanUserDeleteRows" Value="True"/>
        <Setter Property="CanUserResizeRows" Value="False"/>
        <Setter Property="SelectionUnit" Value="CellOrRowHeader"/>
        <Setter Property="SelectionMode" Value="Extended"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="RowHeaderWidth" Value="45"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="VerticalGridLinesBrush" Value="#FF688CAF"/>
        <Setter Property="HorizontalGridLinesBrush" Value="#FF688CAF"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="#FF688CAF"/>
        <Setter Property="RowDetailsVisibilityMode" Value="VisibleWhenSelected"/>
        <Setter Property="ColumnHeaderStyle" Value="{StaticResource keyDataGridColumnHeader}"/>
        <Setter Property="RowHeaderStyle" Value="{StaticResource keyDataGridRowHeader}"/>
        <Setter Property="CellStyle" Value="{StaticResource keyDataGridCell}"/>
    </Style>
</ResourceDictionary>